/* pages/audiobox/audiobox.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.message-list {
  flex: 1;
  padding: 15px;
  overflow-y: auto;
}

.message-item {
  margin-bottom: 10px;
  /* border: black solid 1rpx; */
}

.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.user-message {
  display: flex;
  justify-content: flex-end;
  justify-content: left;
}

.ai-message {
  justify-content: flex-start;
}

.message-content {
  max-width: 70%;
  padding: 5rpx;
  border-radius: 20px;
}

.input-area {
  border-top: 1px solid #eee;
  display: flex;
  align-items: center;
  height: 100rpx;
}

.input-box {
  flex: 1;
  height: 35px;
  padding: 0 10px;
  border-radius: 20px;
  background-color: #f5f5f5;
}

.send-btn {
  background-color: #07c160;
  color: white;
  border-radius: 5px;
  font-size: 14px;
  height: 60rpx;
}

.voice-record-btn {
  width: 100%;
  height: 35px;
  background-color: #f5f5f5;
  border-radius: 20px;
  line-height: 35px;
  text-align: center;
}

.voice-btn {
  display: flex;
  align-items: center;
  background: none;
  border: none;
  padding: 0;
  height: 60rpx;
}

.voice-btn image {
  width: 35px;
  height: 35px;
  margin-right: 5px;
}