/* pages/booklist/booklist.wxss */

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 进度指示器样式 */
.progress-indicator {
  margin-bottom: 60rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 问题容器样式 */
.question-container {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
  flex: 1;
}

.question-content {
  margin-bottom: 40rpx;
}

.question-text {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 40rpx;
  display: block;
}

/* 选项样式 */
.options-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  padding: 30rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border: 2rpx solid #E9ECEF;
  transition: all 0.3s ease;
}

.option-item.selected {
  background: #E8EAF6;
  border-color: #5C6BC0;
  color: #3949AB;
}

.option-item:active {
  transform: scale(0.98);
}

/* 输入框样式 */
.input-container {
  margin-top: 20rpx;
}

.input-container input {
  width: 100%;
  height: 88rpx;
  background: #F8F9FA;
  border: 2rpx solid #E9ECEF;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
}

/* 按钮样式 */
.button-container {
  margin-top: auto;
  padding-top: 40rpx;
}

.next-button {
  width: 100%;
  height: 88rpx;
  background: #CED4DA;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.next-button.active {
  background: #5C6BC0;
}

.next-button.active:active {
  transform: scale(0.98);
}

/* 评分容器样式 */
.rating-container {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.rating-title {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 40rpx;
  display: block;
}

.rating-value {
  font-size: 64rpx;
  color: #5C6BC0;
  font-weight: bold;
  margin: 20rpx 0;
  display: block;
}

.rating-description {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
  display: block;
}

/* 加载动画样式 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E8EAF6;
  border-top-color: #5C6BC0;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 容器加载状态 */
.container.loading {
  pointer-events: none;
  opacity: 0.7;
}

/* 完成页面样式 */
.completion-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  text-align: center;
  min-height: 70vh;
}

.completion-icon {
  width: 160rpx;
  height: 160rpx;
  background: #5C6BC0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 80rpx;
  margin-bottom: 40rpx;
  animation: scaleIn 0.5s ease-out;
}

.completion-title {
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
  animation: fadeIn 0.5s ease-out 0.3s both;
}

.completion-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  animation: fadeIn 0.5s ease-out 0.6s both;
}

.back-button {
  width: 240rpx;
  height: 80rpx;
  background: #5C6BC0;
  color: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  animation: fadeIn 0.5s ease-out 0.9s both;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.95);
  background: #3F51B5;
}

@keyframes scaleIn {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
