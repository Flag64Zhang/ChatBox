.page-bg {
  background: #f7f8fa;
  min-height: 100vh;
}
.van-card {
  width: 300vw;
  margin: 0 auto;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  margin: 16px 8px;
  padding: 16px;
}
.level1 {
  font-weight: bold;
  font-size: 20px;
  margin: 16px 0 8px 0;
  color: #222;
}
.level2 {
  font-size: 16px;
  margin: 10px 0 10px 24px;
  color: #444;
  border-left: 2px solid #eee;
  padding-left: 8px;
}
.level3 {
  font-size: 14px;
  margin: 8px 0 8px 40px;
  color: #888;
}
button {
  margin-left: 8px;
  margin-bottom: 4px;
  border-radius: 6px;
  background: #409eff;
  color: #fff;
  border: none;
  padding: 6px 16px;
  font-size: 14px;
  transition: background 0.2s;
}
button[data-type="up"] {
  background: #67c23a;
}
button[data-type="down"] {
  background: #f56c6c;
}
button:active {
  background: #337ecc;
}
.dialog-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-box {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 4px 24px rgba(0,0,0,0.18);
  padding: 32px 24px 24px 24px;
  min-width: 240px;
}
.dialog-title {
  font-size: 18px;
  color: #333;
  font-weight: bold;
  margin-bottom: 12px;
}
.dialog-input {
  width: 100%;
  border: 1px solid #dcdfe6;
  border-radius: 6px;
  padding: 10px;
  font-size: 15px;
  margin-bottom: 12px;
}
.dialog-actions {
  display: flex;
  justify-content: flex-end;
  gap: 8px;
}
.dialog-actions button {
  min-width: 80px;
}