
.van-card {
  width: 300vw;
  margin: 0 auto;
}
.level1 {
  font-weight: bold;
  font-size: 18px;
  margin: 12px 0 6px 0;
}
.level2 {
  font-size: 16px;
  margin: 8px 0 8px 16px;
}
.level3 {
  font-size: 14px;
  margin: 6px 0 6px 32px;
  color: #666;
}
button {
  margin-left: 8px;
  margin-bottom: 4px;
}
.dialog-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-box {
  background: #fff;
  border-radius: 8px;
  padding: 24px 16px 16px 16px;
  min-width: 240px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.15);
}
.dialog-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 12px;
}
.dialog-input {
  width: 100%;
  border: 1px solid #eee;
  border-radius: 4px;
  padding: 8px;
  margin-bottom: 12px;
}
.dialog-actions {
  display: flex;
  justify-content: flex-end;
  gap: 8px;
}
