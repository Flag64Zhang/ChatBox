/* pages/bookme/bookme.wxss */
/* 新闻列表容器 */
.news-list {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 单条新闻卡片 */
.news-item {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* align-items:flex-start; 顶部对齐 */ 
  align-items:center; /* 标题多行时顶部对齐 */
}
 
/* 新闻内容区域 */
.news-content {
  flex: 1; /* 占据剩余空间 */
  margin-right: 30rpx; /* 与日期区域留出间距 */
}

/* 新闻主标题 */
.news-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  line-height: 44rpx;
  margin-bottom: 16rpx;
  /* 多行省略（最多2行） */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 新闻副标题（可选） */
.news-subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 36rpx;
}

/* 新闻日期 */
.news-date {
  font-size: 28rpx;
  color: #999;
  white-space: nowrap; /* 防止日期换行 */
  flex-shrink: 0; /* 禁止压缩日期宽度 */
  border: solid black 1rpx;
}

/* 加载更多按钮 */
.load-more {
  padding: 30rpx 0;
  text-align: center;
}

.load-more text {
  font-size: 30rpx;
  color: #4a90e2;
}
.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

button {
  margin-bottom: 20px;
  width: 80%;
}

.tip {
  color: #888;
  font-size: 14px;
}